{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"baseUrl": ".",
		"strictFunctionTypes": false,
		"jsx": "react",
		"resolveJsonModule": true
	},
	"include": [
		"@types/**/*",
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"test/**/*.ts",
	],
	"exclude": ["test/**/*.d.ts"]
}
